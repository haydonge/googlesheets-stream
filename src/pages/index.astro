---
import NewCard from "../components/NewCard.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const response = await fetch(
  "https://opensheet.elk.sh/1ge-pyzr0uMTxlALiiUh_sEzdVo1ikGJGavLF04u6AVU/1"
);
const datas = await response.json();

import type { APIRoute } from "astro";
// import Link from "../components/ui/Link.astro";
export const GET: APIRoute = (datas) => {
  return new Response(
    JSON.stringify({
      message: "This was a GET!",
    })
  );
};


  if (!datas) {
    return {
      status: 404,
    };
  }


---
<BaseLayout>
  <div class="card-container">
    {datas.map((data:any) => (
      // <BigCard key={index} data={data} /> // 将 key 属性移到 BigCard 组件内部\
      <NewCard data={data} />
    ))}
  </div>
</BaseLayout>



<style>
  .card-container {
      display: flex;
      flex-wrap: wrap; /* 这里设置 flex-wrap: wrap; 让卡片容器可以换行 */
      justify-content: space-between; /* 这里可以调整卡片在行内的对齐方式，我设置为 space-between，让卡片之间的间隔尽可能平均 */
    }
  
</style>


